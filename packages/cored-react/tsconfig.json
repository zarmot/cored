{
    "compilerOptions": {
        "target": "ES6",
        "module": "ES6",
        "lib": ["ES6", "DOM"],
        "strict": true,
        "allowSyntheticDefaultImports": true,
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "composite": true,
        "noEmitOnError": true,
        "moduleResolution": "Node",
        "rootDir": "src",
        "outDir": "lib",
        "jsx": "react-jsx"
    }
}